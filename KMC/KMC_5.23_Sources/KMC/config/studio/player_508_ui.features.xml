  <!--===============================================================-->
  <!--==handels this template sizes and fixed items metadata ==-->
  <!--===============================================================-->
  <screenAssets>
    <player ratio="4:3"/>
    <fixedAdditional left="0" right="0" top="30" bottom="0"/>
    <screenasset id="TopTitleScreen" height="30"/>
  </screenAssets>
  <!--===============================================================-->
  <!--===========handels this template color themes ===========-->
  <!--===============================================================-->
