<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%">
	<mx:Script>
		<![CDATA[
			[Bindable] public var headerTxt : String;
		]]>
	</mx:Script>
	<mx:VBox width="100%" paddingLeft="6" paddingRight="6">
		<mx:HBox width="100%">
			<mx:Label text="{headerTxt}" width="100%"/> <!-- text="{data.title}" -->
			<mx:Button id="ttBtn" toolTip="{data.helpToolTip}" styleName="toolTipHelp"/>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Label text="{data.value}" width="100%" styleName="pageTitle2" />
			<mx:Spacer width="{ttBtn.width}" />
		</mx:HBox>
	</mx:VBox>
	<mx:VRule height="{this.height}" />
</mx:HBox>
