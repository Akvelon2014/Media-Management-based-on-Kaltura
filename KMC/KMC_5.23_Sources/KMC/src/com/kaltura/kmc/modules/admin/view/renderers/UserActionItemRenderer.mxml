<?xml version="1.0" encoding="utf-8"?>
<renderers:UserBaseItemRenderer xmlns:mx="http://www.adobe.com/2006/mxml" 
								xmlns:renderers="com.kaltura.kmc.modules.admin.view.renderers.*" width="100%" height="100%">
	<mx:Script>
		<![CDATA[
			import com.kaltura.kmc.events.KmcEvent;
			import com.kaltura.vo.KalturaUser;
			
			import mx.collections.ArrayCollection;
			
			[Bindable] private var _cpDp : ArrayCollection;
			override public function set data(value:Object):void {
				super.data = value;
				_cpDp = getActionsDP(value);
//				cb.dataProvider = getActionsDP(value);
//				if (cb.dropdown) {
//					cb.dropdown.dataProvider = cb.dataProvider;
//				}
//				(cb.dataProvider as ArrayCollection).refresh();
			}
			
			protected function getActionsDP(data:Object):ArrayCollection {
				var res:ArrayCollection;
				var usr:KalturaUser = data as KalturaUser;
				for each (var uid:String in data.crippledUsersIds) {
					if (uid == usr.id) {
						res = data.crippledComboDataProvider;
						break;
					}
				} 
				if (!res) {
					res = data.comboDataProvider;
				}
				return res;
			}
			
			protected function onActionSelected():void {
				dispatchEvent(new KmcEvent("actionSelected", cb.selectedItem.id, true)); 
				cb.selectedIndex = -1;
			}
			
		]]>
	</mx:Script>
	<mx:VBox verticalAlign="middle" horizontalAlign="center" width="100%"
			 horizontalScrollPolicy="off" verticalScrollPolicy="off">
		<mx:ComboBox width="130" id="cb" selectedIndex="-1" dataProvider="{_cpDp}"
					 prompt="{resourceManager.getString('admin','select_action')}"
					 change="{onActionSelected()}" 
					 enabled="{data.enableActionDropdown}"/>
	</mx:VBox>
</renderers:UserBaseItemRenderer>
