<root>
	<locale>
		<path>locale/{locale}/content_{locale}_ResourceModule.swf</path>
		<language>en_US</language>
	</locale>
	<uiconf>
		<kdp>
			<moderation>@@ModerationUIConfID@@</moderation>
			<drilldown>@@KdpDrilldownForContentUIConfID@@</drilldown>
			<drilldownAds>@@KdpAdsTabUIConfID@@</drilldownAds>
			<captureThumbnail>@@KdpCaptureThumbnailForContentUIConfID@@</captureThumbnail>
		</kdp>
		<metadata>@@MetadataUIConfID@@</metadata>
		<kclip>
			<ads>@@KClipAdsDrillDownUIConfID@@</ads>
		</kclip>
		<entryDrilldown>
			<panels>
				<panel id="entryMetaData" url="/modules/ked/EntryData.swf" styleName="metaDataHbox" index="0" />
				<panel id="entryThumbnails" url="/modules/ked/EntryThumbnails.swf" index="1" />
				<panel id="entryAcp" url="/modules/ked/EntryAccessControl.swf" styleName="accessControlVbox" index="2" />
				<panel id="entrySch" url="/modules/ked/EntryScheduling.swf" index="3" />
				<panel id="entryAssets" url="/modules/ked/EntryFlavors.swf" styleName="flavorsVbox" index="4" />
				<panel id="contentTab" url="/modules/ked/EntryContent.swf" index="5" />
				<panel id="liveStream" url="/modules/ked/EntryLiveStreaming.swf" index="6" />
				<!-- panel id="customData" url="/modules/ked/EntryCustomData.swf" index="7" /-->
				<!-- <panel id="entryDistribution" url="/modules/ked/EntryDistribution.swf" index="8" /> -->
				<panel id="entryCaptions" url="/modules/ked/EntryCaptions2.swf" index="9" />
				<panel id="ads" url="/modules/ked/EntryAds.swf" index="10" />
				<panel id="entryRelated" url="/modules/ked/EntryRelated.swf" index="11" />
				<panel id="entryClips" url="/modules/ked/EntryClips.swf" index="12" />
				<panel id="entryUsers" url="/modules/ked/EntryUsers.swf" index="13" />
			</panels>
		</entryDrilldown>
	</uiconf>
	<!-- sampleRate: category status sample rate (in ms) 
		singleLevelMax: max categories to show in tree per single level-->
	<categories sampleRate="30000" singleLevelMax="1000" />
	<!-- bulkupload sample files -->
	<bulkupload>/content/docs/kaltura_batch_upload_eagle.zip</bulkupload>
	<!-- cueopints sample -->
	<cuepoints>/content/docs/xml/adCuePointSampleFile.xml</cuepoints>
	<!-- file types -->
	<filters>
		<filter name="video_files" ext="*.3gp;*.3g2;*.3gp2;*.asf;*.avi;*.dv;*.ismv;*.m2ts;*.m2v;*.mod;*.mp4;*.mpeg;*.mpg;*.mts;*.ts;*.vob;*.wmv"/>
		<filter name="audio_files" ext="*.m4a"/>
		<filter name="image_files" ext="*.jpg;*.jpeg;*.gif;*.png"/>
	</filters>
</root>