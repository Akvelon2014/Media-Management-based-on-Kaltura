<definition>
	<version>1.00</version>
	<type>xml</type>
	<name>Draggable Text</name>
	<restrictions>	

		<restriction type="string" default="Enter text here.">
			<id>text</id>
		</restriction>
		
		<restriction type="number" default="0">
			<id>textXPos</id>
		</restriction>
		
		<restriction type="number" default="0">
			<id>textYPos</id>
		</restriction>
		<restriction type="number" default="360">
			<id>width</id>
		</restriction>
		
		<restriction type="number" default="200">
			<id>height</id>
		</restriction>
		
		<restriction type="number" default="1">
			<id>textScaleX</id>
		</restriction>
		
		<restriction type="number" default="1">
			<id>textScaleY</id>
		</restriction>
		
		<restriction type="number" default="0">
			<id>textRotation</id>
		</restriction>

		
		<restriction type="number" default="0xff0000">
			<id>fontColor</id>
		</restriction>
		
		<restriction type="string" default="Arial">
			<id>fontName</id>
			<enums>
				<enum value="Amsterdam"/>
				<enum value="Arial"/>
				<enum value="Arista"/>
				<enum value="Berthsid"/>
				<enum value="Chopin"/>
				<enum value="Coolvetica"/>
				<enum value="Grotesk"/>
				<enum value="Retriga"/>
				<enum value="Osaka"/>
				<enum value="Scribblings"/><enum value="BradyBunch"></enum>
			</enums>
		</restriction>
		<restriction default="40" type="string">
			<id>fontSize</id>
		<enums><enum value="20"></enum>
				<enum value="24"></enum><enum value="28"></enum><enum value="30"></enum><enum value="32"></enum><enum value="34"></enum><enum value="36"></enum><enum value="38"></enum><enum value="40"></enum><enum value="42"></enum><enum value="44"></enum><enum value="46"></enum><enum value="50"></enum><enum value="56"></enum><enum value="60"></enum><enum value="72"></enum><enum value="90"></enum><enum value="100"></enum><enum value="110"></enum><enum value="120"></enum><enum value="140"></enum><enum value="150"></enum></enums></restriction>
		<restriction type="string" default="Normal">
			<id>fontWidth</id>
			<enums>
				<enum value="Bold"></enum>
				<enum value="Italic"></enum><enum value="Bold Italic"></enum><enum value="Normal"></enum></enums></restriction>

	<restriction default="0xffffff" type="number">
			<id>bgColor</id></restriction><restriction default="0" type="number">
			<id>bgAlpha</id>
			<range>
				<stepSize value="0.1"></stepSize>
				<min value="0"></min>
				<max value="1"></max></range></restriction></restrictions>
</definition>
