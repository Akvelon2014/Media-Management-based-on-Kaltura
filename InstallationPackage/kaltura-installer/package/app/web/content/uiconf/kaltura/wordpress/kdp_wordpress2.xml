		<Canvas id="PlayerHolder" styleName="PlayerBackground" width="100%" height="100%" >
			<KplayerModule id="myKplayer" styleName="Kplayer"  k_path="kplayer/KplayerModule.swf" width="100%" height="100%" maxWidth="640" maxHeight="480"/>
			<EndScreen id="endScreen" styleName="centered" k_share_click="popup:SharePop"  k_path="endScreen/EndScreen.swf" width="100%" height="100%" maxWidth="640" maxHeight="480"/>
			<waterMark id="kalturaWaterMark" styleName="centered"  width="100%" height="100%" maxWidth="600" maxHeight="450"  k_path="watermarks/KalturaWaterMark.swf" />
		</Canvas>
		
		<HBox styleName="controllerBox" height="30" width="100%">
			<Spacer width="4"/>
			<Button id="play" styleName="play" width="20" height="17" />
			<Spacer width="2"/>
			<VBox width="100%">
				<Scrubber id="scrubber" styleName="scrubber" width="100%" />
				<Spacer height="4" />
			</VBox>
			<VBox>
				<Spacer height="4" />
				<TimerCountdown id="timer" styleName="timer" width="30" k_path="timertext/SimpleTimer.swf" />
			</VBox>
			<Spacer width="2"/>
			<VolumeModule width="20" height="20" k_path="VolumeBars/VolumeBarA.swf" id="Volume"/> 
			<Button id="fullScreen" width="20" height="20" styleName="fs" label="" />
			<Spacer width="4"/>
		</HBox>
		<HBox styleName="colaborate" width="100%" height="29">
			<LinkButton id="addToReel" width="140" styleName="addToReel" label="Add to this video" height="22" k_click="jsInject:gotoContribWizard,pauseMedia" />
			<Spacer width="4"/>
			<Canvas id="seperator" styleName="seperator" width="1" height="19" />
			<Spacer width="4"/>
			<LinkButton id="editReel"  width="140" styleName="editReel" label="Remix this video" height="22" k_click="jsInject:gotoEditorWindow,pauseMedia" />
		</HBox>
		<HBox styleName="poweredBox" width="100%" height="18">
			<poweredBy id="poweredBy" k_path="poweredby/PoweredBy.swf" styleName="poweredBy" width="120" height="18"/>
		</HBox>
    </VBox>
    <popups>
    		<SharePop id="SharePop" k_path="popups/SharePopup.swf" width="350" height="350"/> 
	</popups>
	<javaScript>
		<jsBlock id="gotoContribWizard" functionName="gotoContribWizard" params="kshowId" >
			<![CDATA[
				function gotoContribWizard (kshowId)
				{
					setTimeout("handleGotoContribWizard ('"+kshowId+"');", 0);
				};
			]]>
		</jsBlock>
		<jsBlock id="gotoEditorWindow" functionName="gotoEditorWindow" params="kshowId" >
			<![CDATA[
				function gotoEditorWindow (kshowId)
				{
					setTimeout("handleGotoEditorWindow ('"+kshowId+"');", 0);
				};
			]]>
		</jsBlock>
	</javaScript>
</layout>

