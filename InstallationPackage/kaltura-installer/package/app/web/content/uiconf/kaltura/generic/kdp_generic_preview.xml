<?xml version="1.0" encoding="UTF-8"?>
<layouts>
<layout skinPath="/content/uiconf/kaltura/wiki/wiki.swf">
    <VBox width="100%" height="100%" styleName="mlayout" >
                         
      <Canvas id="PlayerHolder" styleName="PlayerBackground" width="100%" height="100%" >
	      <KplayerModule id="myKplayer" styleName="Kplayer"  k_path="kplayer/KplayerModule.swf" width="100%" height="100%" _maxWidth="600" _maxHeight="450"/>
      </Canvas>
      
      <HBox styleName="controllerBox" height="30" width="100%">
      	<Spacer width="4"/>
      	<Button id="play" styleName="play" width="20" height="17" />
      	<Spacer width="2"/>
      	<Scrubber id="scrubber" styleName="scrubber" width="100%"/>
      	<TimerCountdown  id="timer" width="40" styleName="timer" k_path="timertext/TimerCountdown.swf"/>
      	<Spacer width="2"/>
      	<VolumeModule width="20" height="20" k_path="VolumeBars/VolumeBarA.swf" id="Volume" styleName="pp"/> 
      	<Spacer width="2"/>       
      	<Button id="fullScreen" width="20" height="17" styleName="fs" label="" />
      	<Spacer width="2"/>       
      </HBox>
      
      <HBox styleName="poweredBox" width="100%" height="18">
      	<poweredBy id="poweredBy" k_path="poweredby/PoweredBy.swf" k_url="http://www.kaltura.com/index.php/corp/wiki_extension" styleName="poweredBy" width="120" height="18"/>
      </HBox>
      
    </VBox>
    <popups>
    	<SharePop id="SharePop" k_path="popups/SharePopup.swf" width="350" height="350"/> 
	 </popups>
	 <javaScript>
			
		</javaScript>
    
</layout>
</layouts>
