<layouts isPlaylist="true">
  <layout layoutId="AppStudioTemplate"
  skinPath="/content/uiconf/kaltura/appstudio/v.1/kdp_skin_aps_v2.swf">

    <Canvas id="topLevelLayout" width="100%" height="100%" styleName="topLevelLayout">
      <HBox id="horizontalPlayerHolder" width="100%" height="100%" styleName="noGapsNoPadding" >
        <VBox id="player" width="100%" height="100%"
        styleName="noGapsNoPadding">
        <HBox height="30" id="TopTitleScreen"  styleName="controllerBoxDark" k_theme_change="true" width="100%">
            <Label height="22" id="movieName" styleName="movieName"
            width="100%" k_theme_change="true"
            text="{myKplayer.kalturaEntry.entryName}" />
          </HBox>
			<Canvas height="100%" id="PlayerHolder" 
				styleName="PlayerBackground" width="100%">

				<Module height="0" id="stats" 
					k_path="stats/KalturaStatsModule.swf" width="0"/>
				<KplayerModule height="100%" id="myKplayer" 
					k_path="kplayer/KplayerModule.swf" styleName="centered" 
					width="100%" />
				<screens height="100%" id="screens" styleName="centered" 
					width="100%" k_path="screens/Screens.swf" 
					k_end_screen_id="endScreen" 
					k_end_screen_over_id="endScreen" 
					k_pause_screen_id="pauseScreen" 
					k_pause_screen_over_id="pauseScreen" 
					k_play_screen_id="emptyScreen" 
					k_play_screen_over_id="playScreen" 
					k_start_screen_id="startScreen" 
					k_start_screen_over_id="startScreen" />
				<plymedia height="100%" id="plyMedia" 
					k_path="addons/PlyMediaModule.swf" styleName="centered" 
					width="100%"/>
				<waterMark height="100%" id="watermark" 
					k_path="watermarks/WaterMarkLoader.swf" 
					k_watermark_path="http://www.kaltura.com/content/uiconf/kaltura/generic/kaltura_watermark.png" 
					k_watermark_position="bottomLeft" styleName="centered" 
					width="100%" k_watermark_padding="0" />
				<adapTv id="adapTv" height="100%" width="100%" 
					k_adaptv_categories="" k_adaptv_key="" 
					k_pre_listen_to="doPlay" k_pre_dispatch="endPreSession" 
					k_post_listen_to="playerPlayEnd" 
					k_post_dispatch="endPostSession" k_adaptv_zone="default" 
					k_path="adapTv/KdpAdapTvModule.swf" styleName="centered" />
			</Canvas>
          <HBox id="ControllerScreen" width="100%" height="35"
          styleName="controllerBoxDark" k_theme_change="true">
            <HBox id="ControllerScreenInner" width="100%"
            height="35" styleName="transparentContainer">

              <Button id="playBtnControllerScreen" command="play"
              width="25" height="25"
              k_buttonType="buttonIconControllerArea"
              styleName="play" tooltip="" />
              <PrevButton id="plPrevButton" direction="prev"
              k_path="playlist/view/modules/PlaylistNextPrevButton.swf"
              k_theme_change="true" />
				<VBox id="scrubberContainerControllerScreen" styleName="noGapsNoPadding" width="100%" height="100%">
					<Spacer height="7"/>
						<Scrubber id="scrubberControllerScreen" styleName="scrubberLight" width="100%" k_color_change="true" height="12" k_theme_change="true" />
						<Spacer height="2"/>
						<HBox width="100%" styleName="noGapsNoPadding" >
							<Spacer width="5"/>
							<TimerCountdown id="timerControllerScreen" width="30" height="10" styleName="timer" k_path="timertext/TimerCountdown.swf" timerType="forwards"/>

						</HBox>
					</VBox>
